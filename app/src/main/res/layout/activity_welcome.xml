<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/principal"
        android:text="SportsQuiz"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="65dp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/header_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animacion2" />

    <Button
        android:id="@+id/comenzar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/animacion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="@color/americano"
        android:text="Comenzar"
        android:textSize="25dp"
        app:cornerRadius="20dp"
        tools:ignore="TextSizeCheck,TextSizeCheck,TextSizeCheck" />

    <Button
        android:id="@+id/Instrucciones"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/comenzar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="55dp"
        android:text="Instrucciones"
        android:textSize="25dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/americano"
        app:cornerRadius="25dp"
        android:textColor="@color/americano"/>

</RelativeLayout>