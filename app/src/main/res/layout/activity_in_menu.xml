<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instrucciones"
    android:orientation="vertical"
    android:background="@color/americano">

    <ImageView
        android:id="@+id/sc2"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/sc2"
        android:contentDescription="@string/todo" />

    <com.google.android.material.card.MaterialCardView
        style="@style/TestCard"
        android:id="@+id/des"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/sc2"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="@string/selecciona_el_deporte_del_quiz_que_deseas_realizar"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/atr2"
        android:background="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:text="@string/atras"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/white"
        app:cornerRadius="25dp"
        android:textColor="@color/white"
        android:layout_marginBottom="25dp"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/sig2"
        android:textStyle="bold"
        android:background="@color/white"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="25dp"
        android:text="@string/siguiente"
        style="?attr/materialButtonOutlinedStyle"
        app:cornerRadius="25dp"
        android:textColor="@color/white"
        android:layout_marginBottom="25dp"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>